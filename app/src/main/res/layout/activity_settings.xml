<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/tableLayout"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="15dp"
    tools:context="mobile.noise.SettingsActivity"
    tools:targetApi="9">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sensors Enabled"
        android:textColor="@color/colorPrimary"
        android:id="@+id/Header1"
        />

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enable your sensor to allow us to collect information of your environment"
        android:id="@+id/textView4" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cameraSwitch"
        android:layout_column="0"
        android:checked="true"
        android:layout_weight="1"
        android:text="Camera"
        android:textSize="18sp"
        android:layout_span="10"
        android:textStyle="normal" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lightSwitch"
        android:layout_column="0"
        android:checked="true"
        android:layout_weight="1"
        android:text="Light"
        android:layout_span="10"
        android:textSize="18dp"
        android:textStyle="normal" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/microphoneSwitch"
        android:layout_column="0"
        android:checked="true"
        android:layout_weight="1"
        android:text="Microphone"
        android:textSize="18dp"
        android:layout_span="10"
        android:textStyle="normal" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accelerometerSwitch"
        android:layout_column="0"
        android:checked="true"
        android:layout_weight="1"
        android:text="Accelerometer"
        android:textSize="18dp"
        android:layout_span="10"
        android:textStyle="normal" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/proximitySwitch"
        android:layout_column="0"
        android:checked="true"
        android:layout_weight="1"
        android:text="Proximity"
        android:textSize="18dp"
        android:layout_span="10"
        android:textStyle="normal" />

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data Collection Interval"
        android:id="@+id/datacollection_duration"
        android:layout_marginTop="12dp"
        android:textSize="18dp" />

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Set the duration to retrieve the data"
        android:id="@+id/textView"
        android:textStyle="normal|italic"
        android:layout_column="0" />

    <Spinner
        android:id="@+id/durationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--
    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/duration_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        />
     -->

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notification"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView2"
        android:layout_column="0"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enable your sensor to allow us to collect information of your environment"
        android:id="@+id/textView3"
        android:textStyle="normal|italic"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_column="0"
        android:checked="true"
        android:layout_weight="1"
        android:text="Allow Notification"
        android:textSize="18sp"
        android:textStyle="normal" />

</LinearLayout>