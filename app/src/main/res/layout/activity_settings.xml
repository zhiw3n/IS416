<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:id="@+id/tableLayout"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    tools:context="mobile.noise.SettingsActivity"
    tools:targetApi="9">

    <TextView
        android:text="Sensors"
        android:id="@+id/Header1"
        style="@style/HeadingTextViewStyle" />

    <TextView
        android:text="Enable your sensor to allow us to collect information of your environment"
        android:id="@+id/textView4"
        style="@style/DetailTextViewStyle" />

    <CheckBox
        android:text="Camera"
        android:id="@+id/cameraSwitch"
        style="@style/SwitchStyle"/>

    <CheckBox
        android:text="Light"
        android:id="@+id/lightSwitch"
        style="@style/SwitchStyle" />

    <CheckBox
        android:text="Microphone"
        android:id="@+id/microphoneSwitch"
        style="@style/SwitchStyle"/>

    <CheckBox
        android:text="Accelerometer"
        android:id="@+id/accelerometerSwitch"
        style="@style/SwitchStyle"/>

    <CheckBox
        android:text="Proximity"
        android:id="@+id/proximitySwitch"
        style="@style/SwitchStyle"/>

    <TextView
        android:text="Data Collection Interval"
        android:id="@+id/datacollection_duration"
        style="@style/NormalTextViewStyle"/>

    <TextView
        android:text="Set the duration to retrieve the data"
        android:id="@+id/textView"
        style="@style/DetailTextViewStyle" />

    <Spinner
        android:id="@+id/durationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/time_array"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/list_element_margin"/>

    <TextView
        android:text="Notification"
        android:id="@+id/textView2"
        style="@style/HeadingTextViewStyle" />

    <TextView
        android:text="Enable your sensor to allow us to collect information of your environment"
        android:id="@+id/textView3"
        style="@style/DetailTextViewStyle" />

    <CheckBox
        android:text="Allow Notification"
        android:id="@+id/notificationSwitch"
        style="@style/SwitchStyle"/>

</LinearLayout>