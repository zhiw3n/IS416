<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/layout">

    <TextView
        android:id="@+id/textView6"
        android:text="Sensors at your disposal"
        style="@style/HeadingTextViewStyle"
        android:layout_weight="0"
        />

    <TextView
        android:id="@+id/editText4"
        android:text='Did you know your phone has numerous sensor and is left without performing to its fullest potential? Let us help you to make your environment smart, without the need to buy new sensors and controllers. Give Sensordyne a try now by clicking "Start Service"'
        style="@style/NormalTextViewStyle"
        />

    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/list_paragraph_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            />
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:scaleType="fitEnd"
            android:src="@drawable/thinking"
            />

    </LinearLayout>


</LinearLayout>
